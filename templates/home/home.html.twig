			<div class="col-12 col-md-10 col-lg-10">
				<main>
					<header class="d-flex justify-content-between align-items-center">
						<div class="my-4">
							<h2 class="fz_h2 fw_600 my-0 color_azul_1 letter_sp_1">¡Bienvenida Giselle!</h2>
						</div>
						<div class="d-inline-flex my-4">
							<div class="d-inline-flex me-4 align-items-center">
								<a href="#" class="" onclick="dropdown()">
									<img class="bell" src="img/icon/bell.svg" alt="bell"/>
								</a>
								<span class="bg_verde_2 score">
									<p class="fz_min fw_700 color_blanco my-0">4</p>
								</span>
								{{ include('dropdown/dropdownMenu.html.twig') }}
							</div>
							<div class="avatar me-3 my-auto">
								<img class="w-100" src="img/user.png" alt="user"/>
							</div>
							<h3 class="fz_h3 fw_700 my-0 color_azul_1 me-4 my-auto">Giselle Adriana</h3>
							<a href="#" class="" onclick="dropdownSesion()">
								<div class="me-4 my-auto sesion">
									<img class="w-100" src="img/icon/arrow_down.svg" alt="arrow_down"/>
								</div>
							</a>
							{{ include('dropdown/dropdownSesion.html.twig') }}
						</div>
					</header>
					<article>
						<div id="vista_1" class="">
							{% include ("basic/calendario.html.twig") %}
						</div>
						<div id="vista_2" class="">
							{% include ("basic/cursos.html.twig") %}
						</div>
						<div id="vista_3" class="">
							{% include ("basic/experiencia.html.twig") %}
						</div>
						<div id="vista_4" class="">
							{% include ("basic/encuesta.html.twig") %}
						</div>
						<div id="vista_5" class="">
							{% include ("basic/certificado.html.twig") %}
						</div>
						{# {% if vista_calendario == vistaSelecionada %}
							{% include ("basic/calendario.html.twig") %}
						{% elseif vista == vista_turno %}
							{% include ("basic/cursos.html.twig") %}
						{% elseif vista == 'experiencia' %}
							{% include ("basic/experiencia.html.twig") %}
						{% elseif vista == 'encuesta' %}
							{% include ("basic/encuesta.html.twig") %}
						{% elseif vista == 'certificado' %}
							{% include ("basic/certificado.html.twig") %}
						{% endif %} #}
					</article>
				</main>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
	<script>
		//carga por defecto la vista calendario
		mostrarVista();

		function cambiarColor(btnClic, id) {
			// boton.classList.toggle("active");
			// Remover la clase 'activo' de todos los botones
			$('.btn_blanco').removeClass('active');

			// Agregar la clase 'activo' solo al botón clicado
			$(btnClic).addClass('active');
			//console.log(">>> --> ", btnClic);
			mostrarVista(id);
			console.log("id --> ", id);
		}

		function mostrarVista(param) {
			// Primero, establece todas las clases a ""
			document.getElementById("vista_1").className = "";
			document.getElementById("vista_2").className = "";
			document.getElementById("vista_3").className = "";
			document.getElementById("vista_4").className = "";
			document.getElementById("vista_5").className = "";
			switch (param) {
				case "calendario":
					var x = document.getElementById("vista_1");
					x.className = "show";
					//console.log("param! ", param);
					break;
				case "cursos":
					var x = document.getElementById("vista_2");
					x.className = "show";
					//console.log("param! ", param);
					break;
				case "experiencia":
					var x = document.getElementById("vista_3");
					x.className = "show";
					//console.log("param! ", param);
					break;
				case "encuesta":
					var x = document.getElementById("vista_4");
					x.className = "show";
					//console.log("param! ", param);
					break;
				case "certificado":
					var x = document.getElementById("vista_5");
					x.className = "show";
					//console.log("param! ", param);
					break;
				default:
					var x = document.getElementById("vista_1");
					x.className = "show";
			}
			

		}

		function calendarChange(btnClic) {
			// boton.classList.toggle("active");
			// Remover la clase 'activo' de todos los botones
			$('.btn_calendar').removeClass('active');

			// Agregar la clase 'activo' solo al botón clicado
			$(btnClic).addClass('active');
		}

		function cambiarApariencia(btnClic) {
				console.log(" Cambiar Apariencia >>>>")
				$('.btn_dark').addClass('clicked');
				setTimeout(() => {
				$(btnClic).removeClass('clicked');
				}, 200);
		}

		function CambiarQuaternary(btnClic) {
				console.log(" Cambiar Quaternary >>>>")
				$('.btn_primary').addClass('clicked');
				setTimeout(() => {
				$(btnClic).removeClass('clicked');
				}, 200);
		}

		function dropdown() {
			$(".dropdown_menu").toggle();
		}

		function dropdownSesion() {
			$(".dropdown_sesion").toggle();
		}
	</script>
{% endblock %}