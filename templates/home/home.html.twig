{% extends 'base.html.twig' %}

{% block body %}
<div class="bg_gradient_home">
	<div class="container-fluid">
		<div class="row">
			<!-- SideBar -->
			<div class="col-12 col-md-2 col-lg-2">
				<aside class="sidebar ps-0">
					<header class="d-flex justify-content-between align-items-center">
